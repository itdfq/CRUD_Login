<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itdfq.dao.UserDao">

    <resultMap id="BaseResultMap" type="com.itdfq.model.User">
        <!--@Table user-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="unit" column="unit" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="role" column="role" jdbcType="VARCHAR"/>
        <result property="delflag" column="delFlag" jdbcType="VARCHAR"/>
        <result property="realname" column="realName" jdbcType="VARCHAR"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, username, password, unit, phone, address, role, delFlag, realName, remark
        from dfq.user
        where id = #{id}
    </select>
    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, username, password, unit, phone, address, role, delFlag, realName, remark
        from dfq.user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, username, password, unit, phone, address, role, delFlag, realName, remark
        from dfq.user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="unit != null and unit != ''">
                and unit = #{unit}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="address != null and address != ''">
                and address = #{address}
            </if>
            <if test="role != null and role != ''">
                and role = #{role}
            </if>
            <if test="delflag != null and delflag != ''">
                and delFlag = #{delflag}
            </if>
            <if test="realname != null and realname != ''">
                and realName = #{realname}
            </if>
            <if test="remark != null and remark != ''">
                and remark = #{remark}
            </if>
        </where>
    </select>


    <select id="login" resultMap="BaseResultMap">
        select * from user where username =#{username}
    </select>
    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into dfq.user(username, password, unit, phone, address, role, delFlag, realName, remark)
        values (#{username}, #{password}, #{unit}, #{phone}, #{address}, #{role}, #{delflag}, #{realname}, #{remark})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update dfq.user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="unit != null and unit != ''">
                unit = #{unit},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="role != null and role != ''">
                role = #{role},
            </if>
            <if test="delflag != null and delflag != ''">
                delFlag = #{delflag},
            </if>
            <if test="realname != null and realname != ''">
                realName = #{realname},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from dfq.user where id = #{id}
    </delete>

</mapper>